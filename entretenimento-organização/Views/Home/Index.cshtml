@{
    ViewData["Title"] = "Home Page";
}



<center>

    <div id="alphabet-nav" class="alphabet-nav"></div>



    <div id="banner">
        <img src="~/img/banne.png" class="banner" width="100%" height="370" alt="Banner">

        <div id="category-buttons" class="botoes">
            <button id="movies-btn" onclick="changeCategory('movies')" class="active">Filmes</button>
            <button id="series-btn" onclick="changeCategory('series')">Séries</button>
            <button id="books-btn" onclick="changeCategory('books')">Livros</button>
        </div>
    </div>

   @*  banner, botoes e add  *@
    <style>

      
   .banner {
            padding-top: 4%;
            display: block;
        } 


    .botoes {
    position: absolute;
    top: 47.2%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    }

    button {
    margin: 0 10px;
    padding: 10px 15px;
            background-color: #f7601e;
    color: #fff;
    border: none;
    cursor: pointer;
    }


            button.active {
                background-color: #9b071e;
                color: #fff;
            }

        #add {
            margin-left: 100px;
            margin-top: 80px;
            width: 120px;
            height: 170px;
            background-color: #f7601e;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor:pointer;
        }

        .icone-mais{
            width: 50px; 
            height: 50px; }
    </style>

</center>

@* add entretenimento *@
    <div id="add">
        <img class="icone-mais" src="~/img/mais.png">

